#include<iostream>

using namespace std;
int main(){
    int detik, menit, jam, hari;
    cout<<"\n\nprogram konversi detik ke hari, jam, menit & detik"<<endl;
    cout<<"\n masukkan detik : ";cin>> detik;
    hari=detik/86400;
    jam=detik/3600;
    menit=detik/60;
    detik=detik/1;
    cout<<"\n konversi waktu tersebut adalah"<<endl;
    cout<<" hari : "<<hari<<endl;
    cout<<" jam : "<<jam<<endl;
    cout<<" menit : "<<menit<<endl;
    cout<<" detik : "<<detik<<endl;
}
